      %]
    [% END %]

    [% IF project_flags_has %]
      [%# project flags %]
      [% WRAPPER bug_modal/field.html.tmpl
          container    = 1
          label        = "Project Flags"
          hide_on_view = !project_flags_set
          help         = "https://wiki.mozilla.org/BMO/UserGuide#Tracking_Flags"
      %]
        [% INCLUDE bug_modal/tracking_flags.html.tmpl
