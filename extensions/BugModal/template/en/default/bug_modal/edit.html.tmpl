    [% END %]
  </div>
</div>

[%# === header === %]

<div role="status" id="io-error" style="display:none"></div>
<div role="status" id="floating-message" style="display:none">
  <div id="floating-message-text">[% change_short_summary FILTER html %]</div>
</div>

